<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>School</th>
      <th>Exp. Years</th>
      <th>Role</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.zip %></td>
        <td><%= user.school %></td>
        <td><%= user.exp_years %></td>
        <td><%= user.role.name %></td>
        <% if user.customer? %>
          <td><%= link_to 'View Pets', pets_path(user_id: user.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
